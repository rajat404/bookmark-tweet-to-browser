{
  "name": "Twitter Chrome Bookmark Button",
  "version": "0.1.0",
  "description": "Bookmark to Chrome directly from timeline with button",
  "permissions": ["activeTab", "declarativeContent", "storage", "bookmarks"],
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "run_at": "document_idle",
    "matches": ["*://*.twitter.com/*"],
    "css": ["dist/css/styles.css"],
    "js": ["dist/content.js"]
  }],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
